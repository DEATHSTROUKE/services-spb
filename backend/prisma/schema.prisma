// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String     @id @default(uuid()) @db.Uuid
  email    String     @unique
  password String
  Tickets  Tickets[]
  Feedback Feedback[]
}

model Films {
  id          String     @id @default(uuid()) @db.Uuid
  title       String     @db.Text
  description String     @db.Text
  image       String     @db.Text
  genre       String     @db.Text
  director    String     @db.Text
  year        String     @db.Text
  Sessions    Sessions[]
  Feedback    Feedback[]
}

model Sessions {
  id      String    @id @default(uuid()) @db.Uuid
  cost    Int
  time    DateTime  @db.Timestamp
  cinema  String    @db.Text
  film    Films     @relation(fields: [filmId], references: [id])
  filmId  String    @db.Uuid
  Tickets Tickets[]
}

model Tickets {
  id        String   @id @default(uuid()) @db.Uuid
  count     Int
  user      Users    @relation(fields: [userId], references: [id])
  userId    String   @db.Uuid
  session   Sessions @relation(fields: [sessionId], references: [id])
  sessionId String   @db.Uuid
}

model Feedback {
  id     String @id @default(uuid()) @db.Uuid
  score  Int
  text   String @db.Text
  user   Users  @relation(fields: [userId], references: [id])
  userId String @db.Uuid
  film   Films  @relation(fields: [filmId], references: [id])
  filmId String @db.Uuid
}
